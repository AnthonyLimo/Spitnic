<h1>Login</h1>

<%= form_tag sessions_path do %>
    <div>
        <%= label_tag :email %><br />
        <%= text_field_tag :email, params[:email] %>
    </div>

    <div>
        <%= label_tag :password %><br />
        <%= password_field_tag :password, params[:password] %>
    </div>

    <div class="action"><%= submit_tag "Login" %></div>
<% end %>